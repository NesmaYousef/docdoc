    "version": "0.2.0",
    "configurations": [

        {
            "name": "docdoc_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "docdoc_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "docdoc_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "DocDoc Development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_development.dart",
            "args": ["--flavor", "development", "--target", "lib/main_development.dart"]
        },
        {
            "name": "DocDoc Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "args": ["--flavor", "production", "--target", "lib/main_production.dart"]
        }
    ]
}